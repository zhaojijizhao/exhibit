									<optgroup label="<%=city[i].label%>">
										<%for(var j=0;j<city[i].cities.length;j++){%>
											<option cid="<%=city[i].cities[j].id%>" <%if(detail.info.cid==city[i].cities[j].id){%>selected<%}%> >
												<%=city[i].cities[j].name%>
											</option>
										<%}%>
									</optgroup>
								<%}%>
							</select>
