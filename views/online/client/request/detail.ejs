					<div class="form-pit">
						<div class="form-subpit">	
							<label>是否需要陪同</label>
							<select class="with_need" disable>
								<option <%if(!detail.with.with_need){%>selected<%}%> need="0">否</option>
								<option <%if(detail.with.with_need){%>selected<%}%> need="1">是</option>
